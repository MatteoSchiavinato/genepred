params {
  // these are the default values for the parameters
  // if you specify them as arguments from the command line
  // these values will be ignored by nextflow
  output_directory = false
  threads = 48
  help = false
  source_dir = "${projectDir}/src"
  // input
  genome_fasta = false
  repeats_gff = false
  // mapping folders
  bam_long = false
  bam = false
  psl = false
  // hints filtering
  max_intron_size=500000
  // priority settings
  rep_priority="6"
  long_read_priority="5"
  bam_priority="4"
  psl_priority="3"
  // augustus
  species_name = false
  augustus_main_dir=""
  augustus_config_path = "${augustus_main_dir}/config"
  augustus_bin = "${augustus_main_dir}/bin"
  augustus_scripts = "${augustus_main_dir}/scripts"
  extrinsic = "${projectDir}/extrinsic.CUSTOM.cfg"
  noise_reduction_script = "${projectDir}/RNA-seq-noise-reduction.v2.0.pl"
  gene_model = "complete"
  // prediction filtering
  rep_overlapping_feature = "exon"
  min_peptide_length = 10
  min_evidence = 1
}

env {
  // besides these: depends on bamtools
  // install augustus 3.4.0 via "conda install augustus" to have libboost 1.71 properly setup
  SAMTOOLS="samtools"
  AUGUSTUS="augustus"
  BIOAWK="bioawk"
  AWK="awk"
  PERL="perl"
  PYTHON3="python3"
  BEDTOOLS="bedtools"
  BLASTP="blastp"
  BLASTN="blastn"
}
